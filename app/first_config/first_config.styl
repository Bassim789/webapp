#first_config_form
    margin 0 auto
    margin-bottom 50px
    width 100%
    max-width 390px
    color #fff
    input
        display block
        width 100%
        padding 10px 20px
        -webkit-box-sizing border-box
        -moz-box-sizing border-box
        box-sizing border-box
        -webkit-appearance none
        border-radius 0px
        outline none
        border 1px solid #ddd
        box-shadow none
        margin 0px
    label
        display block
        margin-top 15px
    .btn
        display block
        width 100%
        padding 10px 20px
        -webkit-box-sizing border-box
        -moz-box-sizing border-box
        box-sizing border-box
        -webkit-appearance none
        border-radius 0px
        outline none
        border 1px solid #ddd
        box-shadow none
        margin 0px
        margin-top 25px
        cursor pointer
        &:active
            background rgba(0,0,0,0.2)
    .form_response
        display block
        width 100%
        padding 10px 20px
        -webkit-box-sizing border-box
        -moz-box-sizing border-box
        box-sizing border-box
        -webkit-appearance none
        border-radius 0px
        outline none
        box-shadow none
        margin 0px
        margin-top 25px
    .success
        background green
    .error
        background red
    .load
        background transparent

