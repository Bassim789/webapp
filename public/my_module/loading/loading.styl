.loading_splash_screen
    position fixed
    top 0
    left 0
    right 0
    bottom 0
    background #B7E0F3
    z-index 10000

.div_loading_wrap
    height 100vh
    top 0
    left 0
    width 100%
    position absolute
    display inline-block

.loading_absolute
    position absolute
    display inline-block
    width 100%
    left 0

.div_loading
    z-index 2000
    position absolute
    top 50%
    left 50%
    margin-top -25px
    margin-left -25px

.ballWrap
    margin 50px

.ball
    background-color rgba(0,0,0,0)
    border 5px solid #94006c
    opacity .9
    border-top 5px solid rgba(0,0,0,0)
    border-left 5px solid rgba(0,0,0,0)
    border-radius 50px
    box-shadow 0 0 35px #94006c
    width 50px
    height 50px
    margin 0 auto
    -moz-animation spin .5s infinite linear
    -webkit-animation spin .5s infinite linear
    animation spin .5s infinite linear

