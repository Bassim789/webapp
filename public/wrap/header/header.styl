@import '../../../app/styl/var'

header
    display block
    position fixed
    z-index 3
    top 0
    width 100%
    height 50px
    line-height 50px
    color text_color
    background white_opa_70
    background -webkit-linear-gradient(top, white_opa_100 0%, white_opa_70 50%, white_opa_0 100%)
    background -o-linear-gradient(top, white_opa_100 0%, white_opa_70 50%, white_opa_0 100%)
    background -moz-linear-gradient(top, white_opa_100 0%, white_opa_70 50%, white_opa_0 100%)
    background linear-gradient(top, white_opa_100 0%, white_opa_70 50%, white_opa_0 100%)
   
#header_title
    font-size 17px
    vertical-align middle
    display inline-block
    margin-right -55px
    cursor pointer


.menu_btn
    display inline-block
    float right
    position relative
    cursor pointer
    padding 0 10px
    width 40px
    height 50px
    &:active
        background-color rgba(0,0,0, 0.1)
    div
        display inline-block
        position relative
        width 100%
        height 30px
        vertical-align middle
        &:before
            content ""
            cursor pointer
            position absolute
            left 0
            top 2px
            width 40px
            height 3px
            background text_color
            box-shadow 0 10px 0 0 text_color, 0 20px 0 0 text_color

#auto_logout_reset
    &:active
        background-color rgba(0,0,0, 0.1)

#overlay_sidebar_menu
    display none
    height 100%
    opacity 0.7
    position absolute
    top 0px
    left 0px
    bottom 0px
    width 100%
    z-index 5000
    background-color rgb(0, 0, 0)
    overflow hidden

#sidr
    position absolute
    width 259px
    border-left 1px solid #fff
    top 0
    right -260px
    left auto
    overflow-y scroll
    z-index -1
    ul
        margin-top -30px
        padding 0px
        li
            display block
            text-align left
            margin-left 30px
            margin-right 30px
            border-bottom 1px solid text_color
            cursor pointer
            &:active
                color #ccc

#sidr_background
    opacity 0.5
    width 259px
    height 100%
    position absolute
    top 0
    right 0
    z-index -2
    background-size cover
    background-position center
    background-repeat no-repeat

.sidr_head
    display inline-block
    width 200px

.close_btn_wrap
    display inline-block
    float right
    cursor pointer
    width 55px
    height 50px
    margin-right -30px
    &:active
        background-color rgba(0,0,0, 0.1)

.close_btn
    margin-right 12px
    padding-right 0px
    display inline-block
    float right
    margin-top 9px
    width 32px
    height 32px
    &:before
        -webkit-transform rotate(45deg)
        transform rotate(45deg)
    &:after
        -webkit-transform rotate(-45deg)
        transform rotate(-45deg)

.close_btn:before,
.close_btn:after
    margin-right -2px
    display inline-block
    content ' '
    height 33px
    width 2px
    background-color text_color

.close_btn_black
    height auto
    margin-right 9px

.close_btn_black:before,
.close_btn_black:after
    height 23px
    background-color #000


